<p id="notice"><%= notice %></p>

<h1>Recipes</h1>
<div class="album text-muted">
  <div class="container">
    <div class="row">
      <% @recipes.each do |recipe| %>
      
        <div class="col-md-4">
        
          <div class="index-item">
            <div><%= link_to recipe.title, recipe, class: 'btn btn-primary btn-sm' %></div>
            <div><%= image_tag recipe.thumb_image %></div>
            <div><%= recipe.description %></div>           
          </div>
        
        </div>
      <% end %>
    </div>
    
  </div>
</div>

<hr>

<%= link_to 'New Recipe', new_recipe_path, class: 'btn btn-primary' %>
